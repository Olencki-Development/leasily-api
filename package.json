{
  "name": "leasily-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "start": "node build/index.js",
    "test": "mocha -r ts-node/register \"tests/setup.ts\" \"tests/**/*.test.ts\"",
    "test:coverage": "nyc npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add . && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(ts|tsx|json)": [
      "npm run format"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/joi-phone-number": "^5.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "chai": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@halliganjs/service-container": "^1.1.0",
    "@sendgrid/mail": "^7.4.2",
    "apollo-server-express": "^2.19.2",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "joi": "^17.3.0",
    "joi-phone-number": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.14",
    "typescript": "^4.1.3"
  }
}
